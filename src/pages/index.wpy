            "i-spin": "iview/spin/index",
            "i-toast": "iview/toast/index",
            "i-avatar": "iview/avatar/index"
        },
    }
    components = {
        course: Course
    }
    async initEcard() {
        try {
            const res = await wepy.$http({
                url: '/ecard/balance',
                method: 'get'
            })
            wepy.$storage.setAsync('ecard', res.data)
        } catch (error) {
            
        }
    }
    async onLoad() {
        const ecard = wepy.$storage.get('ecard')
        if (!ecard)
            this.initEcard()
    }

